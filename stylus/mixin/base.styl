// Center-align a block level element
center-block() 
  display block
  margin-left auto
  margin-right auto


// WebKit-style focus
tab-focus()
  outline thin dotted
  outline 5px auto -webkit-focus-ring-color
  outline-offset -2px


// Typography
text-emphasis-variant(color)
  color color
  a&:hover
    color darken(@color, 10%)


// CSS image replacement
hide-text()
  font "0/0" a
  color transparent
  text-shadow none
  background-color transparent
  border 0





